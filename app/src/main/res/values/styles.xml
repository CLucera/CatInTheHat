<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/title_bg</item>
        <item name="colorPrimaryDark">@color/title_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>



    <style name="SingleButton" parent="android:Widget.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/dark_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="GroupButton" parent="SingleButton">
        <item name="android:background">@color/standard_button</item>
    </style>
</resources>
